{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "E:\\Projects\\GraduationProject\\ProdLogs\\log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "ApplicationName": "SmartAttendanceSystem"
    }
  },
  "AllowedOrigins": [
    "",
    ""
  ],
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "",
    "Issuer": "SmartAttendanceSystem",
    "Audience": "SmartAttendanceSystem users",
    "ExpiryMinutes": 30
  }
}
